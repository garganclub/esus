{% trans_default_domain 'FOSUserBundle' %}
<input type="hidden" id="localisation" name="localisation" value="{{ app.request.uri }}"/>
<div class="wrapper">
    <section id="section1">
      <div class="content">
        <div>
          <img src="{{ asset('img/compte/imgHeadMobile.png') }}" class="img-responsive col-xs-12 nopadding hidden-sm hidden-md hidden-lg hidden-xl">
          <img src="{{ asset('img/compte/imgHead.jpg') }}" class="img-responsive col-sm-12 nopadding hidden-xs">
        </div>
      </div>
    </section>
    <div class="container">
      <section id="section2">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2 col-xl-6 col-xl-offset-3">
          <div class="row">
            <h4 class="formTitle">Nouveau mot de passe</h4>
          </div>
          <div class="col-xs-10 col-xs-offset-1">
			<div class="row">
				<em>
					Compléter le formulaire, votre mot de passe sera alors réinitialiser.<br/>
					Une fois validé, vous devrez utiliser le nouveau mot de passe que vous avez défini.
				</em>
			<br/><br/>
				<div class="hidden-xs col-sm-6">
					{% for flashMessage in app.session.flashbag.get('success') %}
					  <div class="alert alert-success">{{ flashMessage }}</div>
					{% endfor %}
					<h4>Indiquer votre nouveau mot de passe</h4>
					{{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'fos_user_resetting_reset form-group' } }) }}
						{{ form_widget(form) }}
						<br/>
						<input type="submit" class="btnNoir col-xs-12" value="connexion" />
					{{ form_end(form) }}
				</div>
			</div>
        </div>
      </div>
    </section>
</div>