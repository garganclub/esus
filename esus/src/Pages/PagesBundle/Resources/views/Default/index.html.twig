{% extends "::base.html.twig" %}
{% block metadesc %}
  <meta title="Les actualités des ateliers Esus">
  <meta desc="Suivez les dernières news des ateliers Esus, les retours des workshops...">
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
  <link rel="stylesheet" href="{{ asset('css/news.css') }}">
{% endblock %}
{% block title %}Les actualités des ateliers Esus{% endblock %}
{% block body %}
  	<input type="hidden" id="localisation" name="localisation" value="{{ app.request.uri }}"/>	
    <section id="section1">
      <div class="content">
        <div>
          <img src="{{ asset('img/news/imgHeadMobile.png') }}" class="img-responsive col-xs-12 nopadding hidden-sm hidden-md hidden-lg hidden-xl">
          <img src="{{ asset('img/news/imgHead.jpg') }}" class="img-responsive col-sm-12 nopadding hidden-xs">
        </div>
      </div>
    </section>
    <div class="container">
      <section id="section2">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
            <h4 class="formTitle">les actualités du moment</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
            {% set compteur = 0 %}
            <div class="row">
			{% for page in pages %}
				{% if (compteur % 3) == 0 and (compteur != 0) %}
				</div>
				<div class="row">
				{% endif %}
				<div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-0 newsContainer" id="news01">
					<a href="{{ path('pages_page', {'id' : page.id}) }}" class="col-xs-12">
						<div class="row">
							<img src="http://labtelier.esy.es/images/{{ page.image }}" alt="" class="img-responsive col-xs-12">
						</div>
						<div class="row">
							<span class="titreNews col-xs-12">{{ page.titre }}</span>
							<p class="newsDesc col-xs-12">
								{{ page.contenu }}
							</p>
						</div>
					</a>
					<a href="{{ path('pages_page', {'id' : page.id}) }}" class="col-xs-4 col-xs-offset-4 hidden-sm hidden-md hidden-lg hidden-xl btn">
						LIRE
					</a>
				</div>
				{% set compteur = compteur + 1 %}
			{% endfor %}
			</div>
          </div>
        </div>
        <div class="row" style="text-align: center;">
        	<nav class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 col-xl-4 col-xl-offset-4">
				{{ knp_pagination_render(pages) }}
			</nav>
        </div>
      </section>
    </div>
{% endblock %}