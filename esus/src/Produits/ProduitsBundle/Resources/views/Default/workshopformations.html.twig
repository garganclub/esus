{% extends "::base.html.twig" %}
{% block metadesc %}
  <meta title="Les workshops et les formations proposés par les ateliers Esus">
  <meta desc="Inscrivez-vous aux workshops et formations des ateliers Esus !">
{% endblock %}
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('css/panier.css') }}">
  <link rel="stylesheet" href="{{ asset('css/news.css') }}">
  <link rel="stylesheet" href="{{ asset('css/workshop.css') }}">
{% endblock %}
{% block title %}Les workshops et les formations des ateliers Esus{% endblock %}
{% block body %}
    <input type="hidden" id="localisation" name="localisation" value="{{ app.request.uri }}"/>
    <section id="section1">
      <div class="content">
        <div>
          <img src="{{ asset('img/workshop/imgHeadMobile.png') }}" class="img-responsive col-xs-12 nopadding hidden-sm hidden-md hidden-lg hidden-xl">
          <img src="{{ asset('img/workshop/imgHead.jpg') }}" class="img-responsive col-sm-12 nopadding hidden-xs">
        </div>
      </div>
    </section>
    <div class="container">
      <section id="section2">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
            <h4 class="formTitle">les workshops</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">          
            {% set compteurW = 0 %}
            <div class="row">
			{% for workshop in workshops %}
			  {% if (compteurW % 3) == 0 and (compteurW != 0) %}
			  </div>
			  <div class="row">
			  {% endif %}
              <div class="col-xs-12 col-sm-4 WSContainer" id="workshop01">
                <a href="{{ path('produits_infos', {'id' : workshop.id}) }}" class="col-xs-12">
                  <div class="row">
                  	<img src="http://labtelier.esy.es/images/{{ workshop.image }}" alt="" class="img-responsive col-xs-12 hidden-sm hidden-md hidden-lg hidden-xl">
                    <img src="http://labtelier.esy.es/images/{{ workshop.image }}" alt="" class="img-responsive col-sm-12 hidden-xs hidden-xs">
                  </div>
                  <div class="row WSAlign">
                    <span class="titreWS col-xs-12">{{ workshop.titre }}</span>
                    <p class="WSDesc col-xs-6 col-xs-offset-3 col-sm-12 col-sm-offset-0">
                      {{ workshop.article }}
                    </p>
                    <p class="prix col-xs-12">{{ workshop.tarif }} €</p>
                    <a href="{{ path('produits_infos', {'id' : workshop.id}) }}" class="col-xs-4 col-xs-offset-4 hidden-sm hidden-md hidden-lg hidden-xl btnBlanc">
                      VOIR
                    </a>
                  </div>
                  <hr class="hidden-xs">
                </a>
              </div>
			  {% set compteurW = compteurW + 1 %}
			{% endfor %}
			</div>
          </div>
        </div>
        <div class="row" style="text-align: center;">
        	<nav class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 col-xl-4 col-xl-offset-4">
				{{ knp_pagination_render(workshops) }}
			</nav>
        </div>
      </section>
      <section id="section3" class="hidden-xs">
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
            <hr class="divider">
          </div>
        </div>
      </section>
      <section id="section4">
        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-lg-8 col-lg-offset-2">
            <h4 class="formTitle">les formations</h4>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-10 col-sm-offset-1 col-lg-8 col-lg-offset-2">
            {% set compteurF = 0 %}
            <div class="row">
			{% for formation in formations %}
			  {% if (compteurF % 3) == 0 and (compteurF != 0) %}
			  </div>
			  <div class="row">
			  {% endif %}
              <div class="col-xs-12 col-sm-4 WSContainer" id="formation01">
                <a href="{{ path('produits_infos', {'id' : formation.id}) }}" class="col-xs-12">
                  <div class="row">
                    <img src="http://labtelier.esy.es/images/{{ formation.image }}" alt="" class="img-responsive col-xs-12 hidden-sm hidden-md hidden-lg hidden-xl">
                    <img src="http://labtelier.esy.es/images/{{ formation.image }}" alt="" class="img-responsive col-sm-12 hidden-xs">
                  </div>
                  <div class="row WSAlign">
                    <span class="titreWS col-xs-12">{{ formation.titre }}</span>
                    <p class="WSDesc col-xs-6 col-xs-offset-3 col-sm-12 col-sm-offset-0">
                      {{ formation.article }}
                    </p>
                    <p class="prix col-xs-12">{{ formation.tarif }} €</p>
                    <a href="{{ path('produits_infos', {'id' : formation.id}) }}" class="col-xs-4 col-xs-offset-4 hidden-sm hidden-md hidden-lg hidden-xl btnBlanc">
                      VOIR
                    </a>
                  </div>
                  <hr class="hidden-xs">
                </a>
              </div>
			  {% set compteurF = compteurF + 1 %}
			{% endfor %}
			</div>
          </div>
        </div>
        <div class="row" style="text-align: center;">
        	<nav class="col-xs-12 col-sm-8 col-sm-offset-2 col-lg-6 col-lg-offset-3 col-xl-4 col-xl-offset-4">
				{{ knp_pagination_render(formations) }}
			</nav>
        </div>
      </section>
    </div>
{% endblock %}